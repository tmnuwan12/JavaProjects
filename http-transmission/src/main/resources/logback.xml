<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">

  <property file="src/main/resources/logback.properties" />


   
   <!--Daily rolling file appender -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${INTERNAL_LOGFILE}/http-transmission.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>http-transmission.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
 
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{dd MMM yyyy ;HH:mm:ss.SSS} [%thread] %-5level %logger{60} - %msg%n</Pattern>
		</layout>
	</appender>

	<logger name="communicator.http_transmission" level="DEBUG"/>
	
   <root level="debug">
     <appender-ref ref="FILE" />
   </root>
</configuration>