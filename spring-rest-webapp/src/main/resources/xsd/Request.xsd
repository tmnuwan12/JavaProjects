<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.tradecard/stub.com"
	targetNamespace="http://www.tradecard/stub.com" elementFormDefault="true">

	<xs:complexType name="RequestType">
		<xs:attribute name="Id" type="xs:integer" use="required" />
		<xs:attribute name="Message" type="xs:string" use="required" />
		<xs:attribute name="status" type="statusType" use="required" />
	</xs:complexType>

	<xs:simpleType name="statusType">
		<xs:restriction base="xs:int">
			<xs:enumration value="200" />
			<xs:enumration value="404" />
			<xs:enumration value="500" />
		</xs:restriction>
	</xs:simpleType>
	
	<xs:element name="Request" type="RequestType" />
</xs:schema>
