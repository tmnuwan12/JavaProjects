<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- Load resources from classpath -->
    <property resource="logback.properties" />

    <!--Daily rolling file appender -->
    <appender name="FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${INTERNAL_LOGFILE}/rest-ws.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>rest-ws.%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{dd MMM yyyy ;HH:mm:ss.SSS} [%thread] %-5level %logger{60}
                - %msg%n</Pattern>
        </layout>
    </appender>

    <!-- Basic Selection Rule A log request of level p issued to a logger having 
        an effective level q, is enabled if p >= q. This rule is at the heart of 
        logback. It assumes that levels are ordered as follows: TRACE < DEBUG < INFO 
        < WARN < ERROR. -->
    <logger name="com.org.tradecard" level="DEBUG" />


    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>
